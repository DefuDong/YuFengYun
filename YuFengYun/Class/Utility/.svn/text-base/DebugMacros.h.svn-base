#ifdef DEBUG

#define DEBUG_LOG(...) \
do{ \
    printf("_______________________________________________________________________________________\n");\
    printf("FUNCTION \t: %s\nLINE \t\t: %d\nFILE \t\t: %s\n\n", __FUNCTION__, __LINE__, __FILE__);\
    NSLog(__VA_ARGS__);\
    printf("+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++\n\n");\
}while(0)

#define DEBUG_LOG_(...) \
do{ \
    printf("_______________________________________________________________________________________\n");\
    printf("FUNCTION \t: %s\n\n", __FUNCTION__);\
    NSLog(__VA_ARGS__);\
    printf("+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++\n\n");\
}while(0)

#define DEBUG_LOG_FUN \
do{ \
    printf("_______________________________________________________________________________________\n");\
    printf("FUNCTION \t: %s\n", __FUNCTION__);\
    printf("+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++\n\n");\
}while(0)

#else

#define DEBUG_LOG(...)      do{}while(0)
#define DEBUG_LOG_FUN       do{}while(0)
#define DEBUG_LOG_(...)     do{}while(0)

#endif


